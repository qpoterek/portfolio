---
import config from "../config"

import Controls from "./Controls.astro"
import HeaderLogo from "./HeaderLogo.astro"
import Nav from "./Nav.astro"

const { 
	activeNavItem, 
} = Astro.props
---

<header 
	style="position:sticky;top:0px;z-index:10;display:flex;align-items:center;justify-content:space-between;column-gap:16px;"
	class="
		px-4 md:px-8 lg:px-16 backdrop-blur
		border-b border-neutral-900/10 bg-neutral-100/50
		dark:border-neutral-900/10 dark:bg-neutral-900/50
">
	<HeaderLogo text="Quentin Poterek" />
	<Nav navItems={config.pages} activeNavItem={activeNavItem} hasDropdown={true} />
	<Controls />
</header>